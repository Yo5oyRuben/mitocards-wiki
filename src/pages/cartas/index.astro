---
import Layout from "../../layouts/Layout.astro";
import CardGrid from "../../components/CardGrid.astro";
import cards from "../../data/cards.json";

const ASSETS_VERSION = '2025-09-17';
const addV = (p: string): string =>
  `${p}${p.includes('?') ? '&' : '?'}v=${ASSETS_VERSION}`;
const cardsMedium = cards.map((c) => ({
  ...c,
  ilustracion:
    c.ilustracion_m ??
    c.ilustracion_carta_m ??
    c.ilustracion_h ??
    c.ilustracion_l ??
    "/img/placeholder-card.png",
}));
---

<Layout title="Cartas" showBack>
  <div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-4">Cartas</h1>
    <CardGrid items={cardsMedium} />
  </div>
</Layout>


